<h1>Bookings#new</h1>
<p>Find me in app/views/bookings/new.html.erb</p>
  <table>
    <thead>
      <tr>
          <th>Departure Airport</th>
          <th>Arrival Airport</th>
          <th>Start Time</th>
          <th>Duration</th>
        </tr>
    </thead>
  <tbody>
        <td><%= @flight.departure_airport.code %></td>
        <td><%= @flight.arrival_airport.code %></td>
        <td><%= @flight.formatted_start_time %></td>
        <td> <%= (@flight.duration/60).to_i %>hr <%= @flight.duration % 60 %> minutes</td>
      </tr>
    </tbody>
    </table>



<%= form_with model: @booking, local: true do |f|%>
  <%= f.hidden_field :flight_id, value: @flight.id%>

  <div>
    <%= f.label :flight_id, "Flight ID" %>
    <%= f.text_field :flight_id, value: @flight.id, readonly: true %>
  </div>

  <%= f.fields_for :passengers do |pf| %>
    <div>
      <%= pf.label :name, "Name"%>
      <%= pf.text_field :name, placeholder: "Enter your full name"%>
    </div>

    <div>
      <%= pf.label :email, "Email"%>
      <%= pf.text_field :email, placeholder: "Enter your email" %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Confirm Booking" %>
  </div>
<% end %>
